<div class="container">
  <div style="color: #46484c" class="jumbotron">
    <h2>Register</h2><hr>
      {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{msg}}</div>
          {{/each}}
      {{/if}}

        <form method="post" action="/users/register"> 
        <!-- Entry asking for a name-->
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Name" name="name">
          </div>
        <!-- Asking for email -->
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" placeholder="Email" name="email">  
          </div>
        <!-- Asking for a username -->
          <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" placeholder="Username" name="username">  
          </div>
        <!-- You get the idea right? This is asking for a password -->
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" name="password">  
          </div>   
        <!-- Confirm password -->
          <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" placeholder="Confirm password" name="password2">  
          </div>
        <!-- New user message -->
          <div class="form-group">
            <label>Would you like to add an introduction to get started in our community?</label>  
            <input type="text" class="form-control" placeholder="Add a message" name="message">  
          </div>  
        <button type="submit" class="btn btn-primary">Submit</button>  
        </form>
  </div>
</div>
